---
import Layout from '../../components/Layout.astro';

// Get the type from URL params, default to 'event'
const type = Astro.url.searchParams.get('type') || 'event';
const isEvent = type === 'event';
---

<Layout title={`${isEvent ? 'Event' : 'Announcement'} Submitted - Thank You`}>
  <main class="min-h-screen bg-gradient-to-br from-indigo-600 to-indigo-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white bg-opacity-95 rounded-lg shadow-lg max-w-2xl w-full p-8">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h2 class="mt-6 text-3xl font-bold text-gray-900">
          Thank You!
        </h2>
        <p class="mt-2 text-lg text-gray-600">
          Your {isEvent ? 'event' : 'announcement'} has been submitted successfully
        </p>
      </div>

      <div class="mt-8">
        <div class="text-center">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            What happens next?
          </h3>
          <div class="space-y-4 text-gray-800">
            <p>
              Your submission will be reviewed by our moderators to ensure it meets our community guidelines.
            </p>
            <p>
              Once approved, it will be published on our community {isEvent ? 'calendar' : 'announcements'} for everyone to see.
            </p>
            <p>
              If we need to clarify any details, we'll contact you using the email address you provided.
            </p>
          </div>
          
          <div class="mt-8 space-y-3">
            <a
              href="/"
              class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
            >
              Return to Home
            </a>
            <a
              href={isEvent ? "/submit" : "/submit-announcement"}
              class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
            >
              Submit Another {isEvent ? 'Event' : 'Announcement'}
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout> 