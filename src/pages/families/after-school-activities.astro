---
import Layout from '../../components/Layout.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import QuickNavItem from '../../components/ui/QuickNavItem.astro';
import LinkBox from '../../components/ui/LinkBox.astro';
import Disclaimer from '../../components/ui/Disclaimer.astro';

---

<Layout title="After School Activities - Families | Der Town" description="After school programs and activities for families in Der Town, organized by grade level">
  <div class="bg-white min-h-screen">
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">
      <SectionHeader
        title="After School Activities"
        text="Note that this is not an exhaustive list and focuses on programs that are available immediately after school without the need for families to separately arrange transportation to the activity from school."
      />
      <p class="text-gray-400 text-center">A more complete and searchable list of activities can be found at <a href="activities" class="hover:text-grey-800">http://dertown.org/family/activities</a>.</p>
    </div>

    <!-- Quick Navigation -->
    <div class="border-b border-gray-200 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-wrap justify-center gap-2">
        <QuickNavItem title="Peshastin Dryden" link="#peshastin-dryden" icon="school" />
        <QuickNavItem title="Alpine Lakes" link="#alpine-lakes" icon="school" />
        <QuickNavItem title="Middle School" link="#middle-school" icon="school" />
      </div>
    </div>

    <!-- Peshastin Dryden Elementary Section -->
    <div id="peshastin-dryden" class="bg-yellow py-8">
      <div class="w-full px-4 sm:px-6 lg:px-8">
        <SectionHeader
          title="Peshastin Dryden Elementary"
          icon="school"
        />
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
              <LinkBox
                title="WRI After School Program"
                text="Nature-based after school program focusing on outdoor exploration, crafts, and friendship building. Students walk with staff from Alpine Lakes Elementary to WRI's 13-acre campus."
                subtext="Monday-Thursday, 4 afternoons per week. Pick-up at 5:30pm at WRI. Pay What You Can structure up to $35/day."
                link="https://wenatcheeriverinstitute.org/programs/youth/after-school-program.html"
                icon="park"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Cub Scouts"
                text="All-gender scouting program building character, citizenship, and fitness through fun activities and outdoor adventures."
                subtext="Every other Thursday after school with monthly weekend activities."
                link="https://drive.google.com/file/d/1dciVqWZcTV1rLMoHLIIzBQfY09T7K664/view?usp=drive_link"
                icon="groups"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Plain Valley Nordic Devo Team"
                text="Cross-country skiing program focused on developing a passion for playing outdoors through both dry land and winter activities. Skills are acquired through play and reinforced with small drills."
                subtext="Summer/Fall: roller skiing, agility courses, hill bounding, trail runs and a fun camp. $120 with scholarship available. Tuesdays & Thursdays 3:30-5:30. Winter: Information forthcoming."
                link="https://www.skiplain.com/pvnt-summer"
                icon="downhill_skiing"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Alpine Lakes Elementary Section -->
    <div id="alpine-lakes" class="bg-green py-8">
      <div class="w-full px-4 sm:px-6 lg:px-8">
        <SectionHeader
          title="Alpine Lakes Elementary"
          icon="school"
    />
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
              <LinkBox
                title="WRI After School Program"
                text="Nature-based after school program focusing on outdoor exploration, crafts, and friendship building. Students walk with staff from Alpine Lakes Elementary to WRI's 13-acre campus."
                subtext="Available through grade 3. Monday-Thursday, 4 afternoons per week. Pick-up at 5:30pm at WRI. Pay What You Can structure starting at $35/day."
                link="https://wenatcheeriverinstitute.org/programs/youth/after-school-program.html"
                icon="park"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Lego League"
                text="Work in teams to build and program Lego robots to compete in annual set of challenges."
                subtext="Grades 3-5. Sept-Nov Tuesdays 3:00-4:45 in IRMS Library. Competition November 18th."
                link="mailto:etiegel@cascadesd.org"
                icon="precision_manufacturing"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--yellow status-badge--md">FALL-UPCOMING</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Art Club at Art Haus"
                text="Creative art program for independent students to explore various mediums and develop artistic skills in a supportive studio environment."
                subtext="Signup is by month and offered 1-3 days/week with flexibility on days. For responsible children who can work independently on projects."
                link="mailto:katie@leavenwortharthaus.com"
                icon="brush"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--blue status-badge--md">Ongoing</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Leavenworth Library"
                text="Spend your afternoons at the library reading, doing homework, and playing games."
                subtext="For responsible children who can work independently. Tuesday thru Friday."
                link="https://www.ncwlibraries.org/locations/leavenworth-public-library/"
                icon="book"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--blue status-badge--md">Ongoing</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Cub Scouts"
                text="All-gender scouting program building character, citizenship, and fitness through fun activities and outdoor adventures."
                subtext="Every other Thursday after school with monthly weekend activities."
                link="https://drive.google.com/file/d/1dciVqWZcTV1rLMoHLIIzBQfY09T7K664/view?usp=drive_link"
                icon="groups"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Plain Valley Nordic Devo Team"
                text="Cross-country skiing program focused on developing a passion for playing outdoors through both dry land and winter activities. Skills are acquired through play and reinforced with small drills."
                subtext="Summer/Fall: roller skiing, agility courses, hill bounding, trail runs and a fun camp. $120 with scholarship available. Tuesdays & Thursdays 3:30-5:30. Winter: Information forthcoming."
                link="https://www.skiplain.com/pvnt-summer"
                icon="downhill_skiing"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Ski Club"
                text="Weekly skiing program for students to develop skills and enjoy winter sports in the beautiful Ski Hill."
                subtext="Coming Wednesdays January/February 2026. Equipment, transportation to ski hill, and LWSC passes provided. Details to be announced in December."
                link="#"
                icon="ac_unit"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--yellow status-badge--md">Winter</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Girls on the Run"
                text="Running program for girls in grades 3-5 that focuses on building confidence, leadership, and healthy habits."
                subtext="Usually after school on Tuesdays and Thursdays in the spring."
                link="mailto:iauty@cascadesd.org"
                icon="mood"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--blue status-badge--md">Spring</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="School Play"
                text="Theater program where students can explore acting, singing, and stagecraft in a collaborative production."
                subtext="Coming Spring 2026. Auditions and rehearsals to be announced."
                link="#"
                icon="theater_comedy"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--yellow status-badge--md">Spring</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Middle School Section -->
    <div id="middle-school" class="bg-blue-green py-8">
      <div class="w-full px-4 sm:px-6 lg:px-8">
        <SectionHeader
          title="Icicle River Middle School"
          icon="school"
        />
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
              <LinkBox
                title="Art Club at Art Haus"
                text="Creative art program for independent students to explore various mediums and develop artistic skills in a supportive studio environment."
                subtext="For responsible children who can work independently on projects. Contact for current schedule and availability."
                link="mailto:katie@leavenwortharthaus.com"
                icon="brush"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--blue status-badge--md">Ongoing</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Technology Student Association (TSA)"
                text="National organization for students interested in technology, engineering, and design. Students compete in various technology challenges and develop STEM skills."
                subtext="After school in room 205."
                link="https://www.cascadesd.org/o/irms/page/technology-student-association"
                icon="precision_manufacturing"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Sustainability Club"
                text="Environmental awareness and sustainability program where students learn about conservation, recycling, and environmental stewardship."
                subtext="Mondays after school:3-4PM"
                link="https://www.cascadesd.org/o/irms/page/sustainability-club"
                icon="eco"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Athletics"
                text="School sports programs including cross country, basketball, wrestling, track and field, and other seasonal sports."
                subtext="Seasonal sports programs with tryouts and regular practices. Contact athletic director for current season information."
                link="https://www.cascadesd.org/o/irms/page/athletics"
                icon="sports_soccer"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--orange status-badge--md">Seasonal</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Plain Valley Nordic Devo Team"
                text="Cross-country skiing program focused on developing a passion for playing outdoors through both dry land and winter activities. Skills are acquired through play and reinforced with small drills."
                subtext="Summer/Fall: roller skiing, agility courses, hill bounding, trail runs and a fun camp. $120 with scholarship available. Tuesdays & Thursdays 3:30-5:30. Winter: Information forthcoming."
                link="https://www.skiplain.com/pvnt-summer"
                icon="downhill_skiing"
                external={true}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="Scouts"
                text="All-gender scouting program building character, citizenship, and fitness through fun activities and outdoor adventures."
                subtext="Contact scoutmaster for more details."
                link="mailto:baballetnut@gmail.com"
                icon="groups"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--green status-badge--md">OPEN</span>
              </div>
            </div>
            <div class="relative">
                <LinkBox
                  title="Leavenworth Library"
                  text="Spend your afternoons at the library reading, doing homework, and playing games."
                  subtext="For responsible children who can work independently. Tuesday thru Friday."
                  link="https://www.ncwlibraries.org/locations/leavenworth-public-library/"
                  icon="book"
                  external={false}
                />
                <div class="absolute top-2 right-2">
                  <span class="status-badge status-badge--blue status-badge--md">Ongoing</span>
                </div>
              </div>
            <div class="relative">
              <LinkBox
                title="Ski Club"
                text="Weekly skiing program for students to develop skills and enjoy winter sports in the beautiful Cascade Mountains."
                subtext="Coming Wednesdays January/February 2026. Equipment, transportation to ski hill, and LWSC passes provided. Details to be announced in December."
                link="#"
                icon="ac_unit"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--yellow status-badge--md">Winter</span>
              </div>
            </div>
            <div class="relative">
              <LinkBox
                title="School Play"
                text="Theater program where students can explore acting, singing, and stagecraft in a collaborative production."
                subtext="Coming Spring 2026. Auditions and rehearsals to be announced."
                link="#"
                icon="theater_comedy"
                external={false}
              />
              <div class="absolute top-2 right-2">
                <span class="status-badge status-badge--yellow status-badge--md">Spring</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Disclaimer -->
    <Disclaimer />

    <!-- Call to Action -->
    <div class="mt-8 text-center">
      <div class="bg-blue-green p-8">
        <h2 class="text-2xl font-semibold mb-4">Have information about an after school program?</h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="mailto:dertownleavenworth@gmail.com" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Let Us Know
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
