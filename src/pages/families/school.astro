---
import Layout from '../../components/Layout.astro';
import LinkBox from '../../components/ui/LinkBox.astro';
import LinkListItem from '../../components/ui/LinkListItem.astro';
import Disclaimer from '../../components/ui/Disclaimer.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import QuickNavItem from '../../components/ui/QuickNavItem.astro';
---

<Layout title="School - Families | Der Town" description="School resources and information for families in Der Town">
  <div class="text-gray-900 min-h-screen mt-10">
    <SectionHeader
      title="School Resources"
    /> 

    <!-- Quick Navigation -->
    <div class="border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex flex-wrap justify-center gap-2">
          <QuickNavItem title="Calendars" link="#calendars" icon="calendar_month" />
          <QuickNavItem title="Academic Resources" link="#academic" icon="school" />
          <QuickNavItem title="PTO" link="#pto" icon="groups" />
          <QuickNavItem title="Quick Links" link="#quick-links" icon="link" />
        </div>
      </div>
    </div>

    <!-- Calendar Subscriptions Section -->
    <div id="calendars" class="bg-gradient-to-r text-white from-blue-600 to-indigo-700 full-width-section">
        <SectionHeader
          title="School Calendars"
          icon="calendar_month"
          text="Subscribe to Cascade School District calendars for important dates and events."
        /> 
      
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="space-y-4">
          <LinkListItem 
            title="District Calendar"
            text="District-wide events and no-school days"
            link="https://calendar.google.com/calendar/u/0?cid=YWNjYTY0MzEzNmM2MzNjODUyYzZlZDljMjk2OTlkZjY4OWY1ODE0M2Q0YjhmODcwMmU4ZDgzYmUzMzkzOGMzMUBncm91cC5jYWxlbmRhci5nb29nbGUuY29t"
            icon="school"
            iconColor="text-blue-600"
          />
          <LinkListItem 
            title="Peshastin Dryden Elementary"
            text="Elementary school schedules and events"
            link="https://calendar.google.com/calendar/u/0?cid=MGM2MTkxYzNmMmRhOTA1OGE2OTA2NzhhMjVkYmRlYzE1YTk5ODExZjU0NzdhOGE4NTY1MzY1YTllZjAzYjdjYkBncm91cC5jYWxlbmRhci5nb29nbGUuY29t"
            icon="child_care"
            iconColor="text-green-600"
          />
          <LinkListItem 
            title="Alpine Lakes Elementary"
            text="Elementary school schedules and events"
            link="https://calendar.google.com/calendar/u/0?cid=Mzg3YmEwNzIxZjExNmUzNDFhN2RkYjgyODYyNTBjMDYxZDgzNTVjZGNlYTc4NWI4OGFjYmQxZDViYWYzNjYwZUBncm91cC5jYWxlbmRhci5nb29nbGUuY29t"
            icon="child_care"
            iconColor="text-purple-600"
          />
          <LinkListItem 
            title="Icicle River Middle School"
            text="Middle school schedule and events"
            link="https://calendar.google.com/calendar/u/0?cid=ZDZiYTRjMjU4MjFlMzRlODRkMGM3YWViODI2ZjA5Y2M4MDI1ODQ5YzhmZGE4NzA0YmNhNDE3ODFkY2YyZjA1OUBncm91cC5jYWxlbmRhci5nb29nbGUuY29t"
            icon="school"
            iconColor="text-orange-600"
          />
          <LinkListItem 
            title="Cascade High School"
            text="High school schedule and events"
            link="https://calendar.google.com/calendar/u/0?cid=NmM5ZjI0NzM4YzI4MGM0OTI5MThiNDJmMGQzZjU2Nzc3N2JkYjJiZDFlZWVhYjRkN2FiYTQ3M2YyNzc1MWZlYkBncm91cC5jYWxlbmRhci5nb29nbGUuY29t"
            icon="school"
            iconColor="text-red-600"
          />
        </div>
      </div>
    </div>

    <!-- Academic Resources -->
    <div id="academic" class="floating-section-background">
      <div class="floating-section-foreground text-center bg-yellow">
        <SectionHeader
          title="Academic Resources"
          icon="school"
        />        
        <!-- Homework Help -->
        <div class="mb-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <LinkBox 
              title="Help Now"
              text="Free online homework help and tutoring provided from NCW Libraries"
              link="https://www.ncwlibraries.org/online-resources/help-now/"
              icon="computer"
              iconColor="text-blue-600"
            />
            <LinkBox 
              title="Peterson's Test Prep"
              text="Free test prep resources from NCW Libraries for vocational and college entrance exams"
              link="https://www.ncwlibraries.org/online-resources/petersons/"
              icon="groups"
              iconColor="text-green-600"
            />
            <LinkBox 
              title="Local Tutoring Services"
              text="Want to be listed here? Let us know below!"
              link="#"
              icon="school"
              iconColor="text-purple-600"
              external={false}
            />
          </div>
        </div>
      </div>
    </div>

    <!-- PTO Section -->
    <div id="pto" class="bg-green full-width-section">
      <SectionHeader
          title="Parent Teacher Organizations"
          icon="groups"
        /> 
      
      <!-- LIST -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="space-y-4">
          <LinkListItem 
            title="Peshastin Dryden/Alpine Lakes PTO"
            text="Elementary school events and activities"
            link="https://sites.google.com/view/pd-alpinelakespto/"
            icon="child_care"
            iconColor="text-green-600"
          />
          <LinkListItem 
            title="Cascade PTO"
            text="For Icicle River Middle School and Cascade High School"
            link="#"
            icon="school"
            iconColor="text-orange-600"
            external={false}
          />
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div id="quick-links" class="floating-section-background">
      <div class="floating-section-foreground bg-yellow">
        <SectionHeader
          title="Quick Links"
          icon="groups"
        /> 
        <!-- LIST -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="space-y-4">
            <LinkListItem 
              title="Volunteer Form"
              text="Must be completed annually to be eligible to volunteer in the schools."
              link="https://www.helpcounterweb.com/welcome/apply.php?district=cascade"
            />
            <LinkListItem 
              title="School District"
              link="https://www.cascadesd.org/"
            />
            <LinkListItem 
              title="School Board"
              link="https://www.cascadesd.org/page/school-board"
            />
            <LinkListItem 
              title="Kodiak Athletics"
              link="https://www.cascadekodiakathletics.com/"
            />
            <LinkListItem 
              title="Kodiak Athletic Booster Club"
              link="https://sites.google.com/site/cascadeathleticboosterclub/"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Disclaimer -->
    <Disclaimer />

    <!-- Call to Action -->
    <div class="mt-8 text-center bg-blue-green p-8">
      <h2 class="text-2xl font-semibold mb-4">Have some information you think we should add?</h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="mailto:dertownleavenworth@gmail.com" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Let Us Know
        </a>
      </div>
    </div>
    
  </div>
</Layout> 