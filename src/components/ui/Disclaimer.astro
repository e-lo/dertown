---
export interface Props {
  title?: string;
  text?: string;
  contactEmail?: string;
}

const { 
  title = "Disclaimer", 
  text = "The information provided on this page is for convenience only and should not be construed as official. While we strive to maintain accurate and up-to-date information, please verify details directly with the organizing entity. Corrections and updates are gladly accepted - please contact us if you notice any inaccuracies.",
  contactEmail = "dertownleavenworth@gmail.com"
} = Astro.props;
---

<div class="w-full px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-fandango">
    <div class="flex items-start">
      <span class="material-symbols-outlined text-gray-500 mr-3 mt-0.5">info</span>
      <div>
        <h3 class="text-sm font-semibold text-gray-700 mb-2">{title}</h3>
        <p class="text-sm text-gray-600 leading-relaxed" set:html={text.replace('contact us', `<a href="mailto:${contactEmail}" class="text-blue-600 hover:text-blue-800 underline">contact us</a>`)}>
        </p>
      </div>
    </div>
  </div>
</div> 