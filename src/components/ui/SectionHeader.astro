---
export interface Props {
  title: string;
  icon?: string;
  text?: string;
}

const { 
  title,
  icon = "",
  text = "",
} = Astro.props;
---
<div class="text-center mb-6">
    <h2 class="text-3xl font-bold flex items-center justify-center">
        {icon && (
            <span class="material-symbols-outlined text-3xl mr-3">{icon}</span>
        )}
        {title}
    </h2>
    {text && (
        <p class="text-lg mt-3">
            {text}
        </p>
    )}
</div>