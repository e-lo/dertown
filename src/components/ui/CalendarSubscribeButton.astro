---
export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`relative ${className}`}>
  <a 
    href="/calendar-subscribe"
    class="p-2 text-gray-600 hover:text-gray-300 bg-transparent focus:outline-none group relative inline-flex items-center justify-center"
    aria-label="Subscribe to calendar">
    <!-- Calendar icon with plus -->
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="relative">
      <rect x="3" y="4" width="18" height="18" rx="2"/>
      <path d="M16 2v4M8 2v4M3 10h18"/>
      <!-- Plus sign overlay -->
      <circle cx="18" cy="6" r="6" fill="currentColor" class="text-indigo-600"/>
      <path d="M18 3v6M15 6h6" stroke="white" stroke-width="2" stroke-linecap="round"/>
    </svg>
    <span class="tooltip right-full">
      Subscribe to calendar
    </span>
  </a>
</div> 