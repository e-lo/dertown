---
interface Props {
  name: string;
  id?: string;
  required?: boolean;
  disabled?: boolean;
  className?: string;
}

const { 
  name,
  id = name,
  required = false,
  disabled = false,
  className = ''
} = Astro.props;

const baseClasses = 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500';
const classes = `${baseClasses} ${disabled ? 'bg-gray-50 cursor-not-allowed' : ''} ${className}`;
---

<select
  id={id}
  name={name}
  required={required}
  disabled={disabled}
  class={classes}
>
  <slot />
</select> 