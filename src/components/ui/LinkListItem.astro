---
export interface Props {
  title: string;
  text?: string;
  subtext?: string;
  link: string;
  icon?: string;
  iconColor?: string;
  external?: boolean;
}

const { title, text, subtext, link, icon, iconColor = "text-gray-600", external = true } = Astro.props;
---

<a href={link} target={external ? "_blank" : "_self"} class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0 hover:bg-gray-50 transition-colors rounded-lg px-2 group">
  <div class="flex items-center">
    {icon && (
      <span class={`material-symbols-outlined text-2xl mr-3 ${iconColor}`}>
        {icon}
      </span>
    )}
    <div>
      <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
      {text && <p class="text-sm text-gray-600">{text}</p>}
      {subtext && <p class="text-xs text-gray-500 mt-1">{subtext}</p>}
    </div>
  </div>
  {external && (
    <span class="material-symbols-outlined text-gray-400 text-sm">open_in_new</span>
  )}
</a> 
