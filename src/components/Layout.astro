---
import '../styles/global.css';
import Navbar from './Navbar.astro';
import Footer from './Footer.astro';

const {
  title = 'Der Town - Community Events',
  description = 'Discover and share community events in Der Town',
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2" />
    <link rel="icon" type="image/svg+xml" href="/favicon-logo.svg?v=2" />
    <link rel="apple-touch-icon" href="/favicon.ico?v=2" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T9Z4DYJ75S"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-T9Z4DYJ75S');
    </script>
  </head>
  <body>

    <div class="min-h-screen flex flex-col">
      <Navbar />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
      <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>
    </div>

  </body>
</html>
