---
import '../styles/global.css';
import Navbar from './Navbar.astro';

const {
  title = 'Der Town - Community Events',
  description = 'Discover and share community events in Der Town',
  image = '/logo.svg',
  url = Astro.url.href,
  type = 'website',
} = Astro.props;

// Ensure absolute URLs for images
const imageUrl = image.startsWith('http') ? image : new URL(image, Astro.site || Astro.url).href;
const siteUrl = Astro.site || Astro.url.origin;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2" />
    <link rel="icon" type="image/svg+xml" href="/favicon-logo.svg?v=2" />
    <link rel="apple-touch-icon" href="/favicon.ico?v=2" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content="Der Town" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />
    
    <!-- Additional meta tags -->
    <meta name="robots" content="noindex, nofollow" />
    <meta name="author" content="Der Town" />
    <link rel="canonical" href={url} />
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T9Z4DYJ75S"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-T9Z4DYJ75S');
    </script>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <!-- Fixed navbar -->
      <div class="fixed top-0 left-0 right-0 z-20">
        <Navbar />
      </div>
      <!-- Main content - no footer -->
      <main class="flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>

