{
  "name": "dertown-style-tools",
  "version": "0.1.0",
  "description": "Linting and formatting tools for Der Town (CSS, JS, HTML, Markdown)",
  "devDependencies": {
    "stylelint": "^16.4.2",
    "stylelint-config-standard": "^36.0.0",
    "prettier": "^3.2.5",
    "eslint": "^9.0.0",
    "markdownlint-cli": "^0.39.0"
  },
  "scripts": {
    "lint:css": "stylelint 'dertown/static/css/**/*.css' 'events/static/**/*.css'",
    "lint:js": "eslint 'dertown/static/js/**/*.js' 'events/static/**/*.js'",
    "lint:md": "markdownlint '**/*.md'",
    "format": "prettier --write 'dertown/static/**/*.{css,js,html,md}' 'events/static/**/*.{css,js,html,md}'"
  }
} 