{
  "name": "dertown",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:validate": "npm run validate-theme-colors && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src/ --ext .js,.ts,.astro",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "tsx src/lib/__tests__/date-time-formatting.test.ts",
    "test:filtering": "tsx src/lib/__tests__/event-filtering.test.ts",
    "test:fullcalendar": "tsx src/lib/__tests__/fullcalendar-utc.test.ts",
    "test:timezone": "TZ=UTC tsx scripts/validate_timezone.mjs",
    "validate-theme-colors": "node --loader ts-node/esm scripts/validate_theme_colors.ts",
    "setup-env": "echo 'Create .env.local with: SUPABASE_URL=http://127.0.0.1:54321 and SUPABASE_ANON_KEY=your-key'"
  },
  "dependencies": {
    "@astrojs/netlify": "^5.5.4",
    "@astrojs/solid-js": "^5.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "@date-fns/tz": "^1.4.1",
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/list": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@shoelace-style/shoelace": "^2.20.1",
    "@types/rrule": "^2.1.7",
    "astro": "^4.14.0",
    "date-fns": "^4.1.0",
    "embla-carousel": "^8.6.0",
    "resend": "^6.5.2",
    "rollup-plugin-copy": "^3.5.0",
    "rrule": "^2.8.1",
    "solid-js": "^1.9.7",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.4.1",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5"
  }
}
